{% import "lib/helpers.njk" as helpers %}

{% macro make(content, src = false, size = false, classes = false, color = false) %}
<div class="card-brand{{ helpers.parse(classes) }}">
  {% if src %}
  <span class="card-brand__badge{{ ' card-brand__badge--' + color if color }}">
    <span class="card-brand__logo" style="background-image: url({{ src }}); background-size: {{ size }} auto;"></span>
  </span>
  {% endif %}

  <div class="card-brand__name">
  {{ content | safe }}
  </div>
</div>
{% endmacro %}
