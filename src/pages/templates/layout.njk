{% set meta = datasets.get('meta.json') %}
{% import "./lib/icon.njk" as icon %}

<!doctype html>
<html class="no-js" lang="{{ meta.lang }}">

<head>
  <meta charset="{{ meta.charset }}">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <title>{{ meta.title }}</title>
  <meta name="description" content="{{ meta.description }}">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <link rel="stylesheet" href="css/main.css">
</head>

<body>
  <!--[if lte IE 9]>
  <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="https://browsehappy.com/">upgrade your browser</a> to improve your experience and security.</p>
  <![endif]-->

  <div class="dashboard">
    <div class="dashboard__navbar">
      {% include "partials/navbar.njk" %}
    </div>

    <div class="dashboard__display">
      <div data-state="close" class="dashboard__side-bar">
        {% include "partials/side-menu.njk" %}
      </div>
      <div class="dashboard__content{{ ' page-' + page.active if page.active }}">
        {% block content %} {% endblock %}
      </div>
    </div>

    <div class="lining" id="lining" data-state="close"></div>
  </div>

  <script src="js/bundle.js" charset="utf-8"></script>
</body>

</html>
