{% extends "layout.njk" %}

{% block content %}

  <!-- begin create -->
  <div class="create">
    <!-- end hero -->
    <div class="create__container container-lg container-fluid">
      <div class="box box--p--lg">
        <!-- begin row -->
        <div class="row mt-9">
          <div class="col-md-3">
            <h4>Base information</h4>
            <div class="help-inf mt-8">
              <div class="help-inf__text">Upload your project logo, name & category to to personalize </div>
              <div class="help-inf__icon">{{ icon.make('arr-right') }}</div>
            </div>
          </div>
          <div class="col-md-9">
            <div class="row">
              <div class="col-md-3">
                <div class="upload-img">
                  <label class="upload-img__wrap">
                    <span class="upload-img__img" style="background-image: url(./assets/imgs/upload-img.png);"></span>
